@model Instituicao.Models.TrabalhoViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Trabalho</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TraTitulo" class="control-label"></label>
                <input asp-for="TraTitulo" class="form-control" />
                <span asp-validation-for="TraTitulo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TraValor" class="control-label"></label>
                <input asp-for="TraValor" class="form-control" />
                <span asp-validation-for="TraValor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TraNota" class="control-label"></label>
                <input asp-for="TraNota" class="form-control" />
                <span asp-validation-for="TraNota" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DisID" class="control-label"></label>
                <select asp-for="DisID" class ="form-control" asp-items="ViewBag.DisID"></select>
            </div>
            <div class="form-group">
                <label asp-for="OrtID" class="control-label"></label>
                <select asp-for="OrtID" class ="form-control" asp-items="ViewBag.OrtID"></select>
            </div>

            <div class="form-group">
                <label asp-for="TipoTrabalho" class="control-label"></label>
                <select asp-for="TipoTrabalho" class="form-control">
                    <option value="TCC">TCC</option>
                    <option value="Artigo">Artigo</option>
                    <option value="Outro">Outro</option>
                </select>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
